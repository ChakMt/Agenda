<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/linearLayout2"
                                                   android:background="@color/white">

    <EditText
            android:layout_width="216dp"
            android:layout_height="46dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/descripcionDelEvento" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView17" app:layout_constraintVertical_bias="0.0"
            android:backgroundTint="@color/black"/>
    <EditText
            android:layout_width="222dp"
            android:layout_height="42dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/participanteEvento"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/textView19"
            android:backgroundTint="@color/black"/>
    <EditText
            android:layout_width="224dp"
            android:layout_height="41dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/fechaInEvento"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView17"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView18"
            android:backgroundTint="@color/black"/>
    <TextView
            android:text="Fecha de fin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView18"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/fechaInEvento" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/fechaFinEvento" android:textColor="@color/black"/>
    <TextView
            android:text="Participante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView19"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/fechaFinEvento" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/participanteEvento" android:textColor="#090909"/>
    <TextView
            android:text="Fecha de inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView17"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/descripcionDelEvento"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/fechaInEvento"
            android:textColor="@color/black"/>
    <EditText
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/tituloEvento"
            app:layout_constraintTop_toBottomOf="@+id/textView10" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/textView11" app:layout_constraintVertical_bias="0.068"
            android:layout_marginTop="8dp" android:backgroundTint="@color/black"/>
    <TextView
            android:text="Descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView11"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/descripcionDelEvento"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tituloEvento"
            android:textColor="@color/black"/>
    <EditText
            android:layout_width="221dp"
            android:layout_height="43dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/fechaFinEvento"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView18" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView19" android:backgroundTint="@color/black"/>
    <TextView
            android:text="Titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView10"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textColor="@color/black"/>
    <Button
            android:text="Guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnGuardarEvento"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="96dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="152dp"/>
    <TextView
            android:text="Ubicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView20"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/participanteEvento" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.018" android:textColor="#0B0B0B"/>
    <EditText
            android:layout_width="221dp"
            android:layout_height="40dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/ubicacionEvento"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView20"
            android:textColorLink="#0B0B0B" android:backgroundTint="@color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>